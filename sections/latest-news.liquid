<style>
.news-wrapper .sec-tl span {
   color: {{ section.settings.color_text }};
   font-size: {{ section.settings.font_size_text | append: 'px !important' }};
   font-style:{{ section.settings.font_style_text }};
   font-weight: {{ section.settings.font_weight_text }};
}
.news-wrapper  .sec-tl h2 {
    color: {{ section.settings.color_text }};
    font-size: {{ section.settings.font_size_text_heading_2 | append: 'px !important' }};
    font-style: {{ section.settings.font_style_text_heading_2 }};
    font-weight: {{ section.settings.font_weight_text_heading_2 }};
}
    </style>  
<section>
    <div class="news-wrapper">
        <div class="container">
            <div class="sec-tl">
                <span>{{ section.settings.heading1 }}</span>
                <h2>{{ section.settings.heading2 }}</h2>
            </div>
            <div class="news-inner-wrapper">
                <div class="row">
                     {% assign blog = section.settings.blog %}
                    {%- for article in blog.articles -%}
                    <div class="col-lg-4 col-md-6">
                        <div class="news-box">
                            <figure>
                                <a href="{{ article.url }}"><img src="{{ article.image.src | img_url: 'medium' }}" alt="{{ article .title }}"></a>
                            </figure>
                            <div class="news-content">
                                <div class="meta-wrapper">  
                                    <span>{{ article.published_at | date: "%b %d, %Y" }}</span>
                                    <span><svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 32 32" height="18" viewBox="0 0 32 32" width="18">
                                            <g id="_x31_4_comment">
                                                <g>
                                                    <path d="m8 30c-.147 0-.295-.033-.434-.099-.345-.167-.566-.516-.566-.901v-5h-3c-1.654 0-3-1.346-3-3v-16c0-1.654 1.346-3 3-3h24c1.654 0 3 1.346 3 3v16c0 1.654-1.346 3-3 3h-12.149l-7.226 5.781c-.181.145-.402.219-.625.219zm-4-26c-.552 0-1 .449-1 1v16c0 .551.448 1 1 1h4c.553 0 1 .447 1 1v3.92l5.875-4.701c.178-.142.397-.219.625-.219h12.5c.552 0 1-.449 1-1v-16c0-.551-.448-1-1-1z" />
                                                </g>
                                                <g>
                                                    <path d="m24 12h-16c-.553 0-1-.448-1-1s.447-1 1-1h16c.553 0 1 .448 1 1s-.447 1-1 1z" />
                                                </g>
                                                <g>
                                                    <path d="m16 16h-8c-.553 0-1-.448-1-1s.447-1 1-1h8c.553 0 1 .448 1 1s-.447 1-1 1z" />
                                                </g>
                                            </g>
                                        </svg> {{ article.comments_count }}</span>  
                                </div>
                                <h4><a href="#">{{ article.title }}</a></h4>
                                <p>{{ article.content }}</p>
                                <a href="#" class="news-link">Read More <span><svg xmlns="http://www.w3.org/2000/svg" id="Layer_2" height="12" viewBox="0 0 24 24" width="12" data-name="Layer 2">
                                            <path d="m22.707 11.293-7-7a1 1 0 0 0 -1.414 1.414l5.293 5.293h-17.586a1 1 0 0 0 0 2h17.586l-5.293 5.293a1 1 0 1 0 1.414 1.414l7-7a1 1 0 0 0 0-1.414z" /></svg></span></a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}  
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="news-button">
                            <a href="#" class="theme-btn style-stroke">View All Posts</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


