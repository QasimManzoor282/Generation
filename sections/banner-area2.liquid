<style>
.banner-area.home2 .banner-caption .caption-heading {
   color: {{ section.settings.color_text }};
   font-size: {{ section.settings.font_size_text | append: 'px !important' }};
   font-style:{{ section.settings.font_style_text }};
   font-weight: {{ section.settings.font_weight_text }};
}

.banner-area.home2 .banner-caption p {
    color: {{ section.settings.color_text_description }};
    font-size: {{ section.settings.font_size_text_description | append: 'px !important' }};
    font-style: {{ section.settings.font_style_text_description }};
    font-weight: {{ section.settings.font_weight_text_description }};
}

.banner-area.home2 .theme-btn { 
    color:{{section.settings.btn_clr}} !important;
    background:{{section.settings.bg_clr}} !important;
}

.banner-area.home2 .theme-btn :hover{
    color:{{section.settings.btn_clr_hover}} !important;
     background:{{section.settings.bg_clr_hover}} !important;
}
</style>
<section class="banner-area banner-bg home2">
    <div class="banner-wrapper">
        <div class="banner-item" style="background-image:url({{ section.settings.image1 | img_url: '' }});">
            <div class="banner-caption">
                <div class="container">
                    <div class="caption-inner">
                        <div class="caption-content">
                            <h2 class="caption-heading">{{ section.settings.heading1 }}</h2> 
                            <h2 class="caption-heading">{{ section.settings.heading2 }}</h2>
                            <h2 class="caption-heading">{{ section.settings.heading3 }}</h2>
                            <p>{{ section.settings.description }}</p>
                            <a href="{{ section.settings.link_url }}" class="theme-btn">{{ section.settings.link_text }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
