<style>
.about-content span {
    color: {{ section.settings.color_text }};
   font-size: {{ section.settings.font_size_text | append: 'px !important' }};
   font-style:{{ section.settings.font_style_text }};
   font-weight: {{ section.settings.font_weight_text }};
}

.about-content h2 {
    color: {{ section.settings.color_text }};
    font-size: {{ section.settings.font_size_text_heading_2 | append: 'px !important' }};
    font-style: {{ section.settings.font_style_text_heading_2 }};
    font-weight: {{ section.settings.font_weight_text_heading_2 }};
}

.about-content p {
    color: {{ section.settings.color_text }};
    font-size: {{ section.settings.font_size_text_desc_1 | append: 'px !important' }};
    font-style: {{ section.settings.font_style_text_desc_1 }};
    font-weight: {{ section.settings.font_weight_text_desc_1 }};
}

.about-content p+p {
    color: {{ section.settings.color_text }};
    font-size: {{ section.settings.font_size_text_desc_2 | append: 'px !important' }};
    font-style: {{ section.settings.font_style_text_desc_2 }};
    font-weight: {{ section.settings.font_weight_text_desc_2 }};
}
.caption_list-{{section.id}} {
    color: {{ section.settings.color_text }};
    font-size: {{ section.settings.font_size_text_list | append: 'px !important' }};
    font-style: {{ section.settings.font_style_text_list }};
    font-weight: {{ section.settings.font_weight_text_list }};
}
</style>
<section>
    <div class="about-wrapper">
        <div class="container">
            <div class="about-inner-wrapper">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="about-preview custom-pst">
                                    <img src="{{ section.settings.image1 | img_url: '' }}" alt="About">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="about-preview">
                                    <img src="{{ section.settings.image2 | img_url: '' }}" alt="About">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-content">
                            <span>{{ section.settings.heading1 }}</span>
                            <h2>{{ section.settings.heading2 }}</h2>
                            <p>{{ section.settings.desc-1 }}</p>
                            <p>{{ section.settings.desc-2 }}</p>
                              <ul class="detail-list">
                                {% for block in section.blocks %}
                                    <style>
                                        .caption_list-{{block.id}} {
                                           color:{{ block.settings.color_text }} !important;
                                        }
                                       
                                        </style >
                                  <li class="caption-list caption_list-{{block.id}} caption_list-{{section.id}}">{{ block.settings.list  }}</li>
                                {% endfor %}
                             </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

