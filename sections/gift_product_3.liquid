<style>

.giving-text-wrapper .sec-tl span  {
      color: {{ section.settings.color_text }};
      font-size: {{ section.settings.font_size_text | append: 'px !important' }};
      font-style: {{ section.settings.font_style_text }};
      font-weight: {{ section.settings.font_weight_text }};

  }
  .giving-text-wrapper .sec-tl h2 {
      color: {{ section.settings.color_text2 }};
      font-size: {{ section.settings.font_size_text_heading_2 | append: 'px !important' }};
      font-weight: {{ section.settings.font_weight_text_heading_2 }};
  }  
  .giving-text-wrapper p{
      color: {{ section.settings.color_text3 }};
      font-size: {{ section.settings.font_size_text3 | append: 'px !important' }};
      font-weight: {{ section.settings.font_weight_text3 }};
  } 
  .giving-text-wrapper .more-link{
      color: {{ section.settings.color_text4 }};
      font-size: {{ section.settings.font_size_text4 | append: 'px !important' }};
      font-weight: {{ section.settings.font_weight_text4 }};
  } 
  .giving-wrapper::before{content:"";
  position: absolute;
  top: 0;
  left: 0;
  width: 46%;
  height: 100%;
  background-image: url('{{ section.settings.image2 | img_url: '' }}');;
  background-repeat: no-repeat;
}
</style>

<section>
    <div class="giving-wrapper" style="background-image:url('{{ section.settings.image1 | img_url: '' }}');">
        <div class="container">
            <div class="giving-inner-wrapper">
                <div class="row">
                   
                            <div class="col-lg-6">
                              
                                        <div class="row gx-0">
                                            {%- if section.settings.enable_collection -%} 
                                                {% assign collection = section.settings.collection %}
                                                {% for product in collection.products limit: 2%}
                                                <div class="col-lg-6">
                                                    <div class="giving-box">
                                                        <div class="giving-image">
                                                            {% assign images = product.media | where: 'media_type', 'image' %}

                                                            {% for image in images limit: 2 %}
                                                            {%- if forloop.first -%}
                                                                {{-
                                                                image
                                                                | image_url: height: 575, width: 500, crop: 'center'
                                                                | image_tag: class: 'primary-image'
                                                                }}
                                                            {% else %}
                                                                {{- 
                                                                image
                                                                | image_url: height: 575, width: 500, crop: 'center'
                                                                | image_tag: class: 'secondary-image'
                                                                }}
                                                            {%- endif -%}
                                                            {% endfor %}
                                                        </div>
                                                        <div class="giving-content">
                                                            <h4>{{ product.title }}</h4>
                                                            <span class="product-price">{{ product.price | money }}<del>{{ product.compare_at_price | money }}</del></span>
                                                        </div>
                                                        <a href="{{ product.url }}" class="product-link"></a>
                                                    </div>
                                                </div>
                                                {% endfor %}
                                            {%- endif -%}
                                        </div>
                                    
                            </div>
                       
                            <div class="col-lg-6">
                                <div class="giving-text-wrapper">
                                    <div class="sec-tl">
                                        <span>{{ section.settings.heading1 }}</span>
                                        <h2>{{ section.settings.heading2 }}</h2>
                                    </div>
                                    <p>{{ section.settings.text1 }}</p>
                                    <a href="{{ section.settings.ShopButtonLink }}" class="more-link">{{ section.settings.ShopButtonText }}</a>
                                </div>
                            </div>
                </div>
            </div>
        </div>
    </div>
</section>
