<style>
   .team-wrapper .sec-tl span {
   color: {{ section.settings.color_text }};
   font-size: {{ section.settings.font_size_text | append: 'px !important' }};
   font-style:{{ section.settings.font_style_text }};
   font-weight: {{ section.settings.font_weight_text }};
}
    .team-wrapper .sec-tl h2 {
 color: {{ section.settings.color_text }};
    font-size: {{ section.settings.font_size_text_heading_2 | append: 'px !important' }};
    font-style: {{ section.settings.font_style_text_heading_2 }};
    font-weight: {{ section.settings.font_weight_text_heading_2 }};
}

.team_link-{{section.id}} {
    font-size: {{ section.settings.font_size_text_link_1 | append: 'px !important' }};
   font-style:{{ section.settings.font_style_text_link_1 }};
   font-weight: {{ section.settings.font_weight_text_link_1 }};
}

.content_desc-{{section.id}}{
    font-size: {{ section.settings.font_size_text_desc_1 | append: 'px !important' }};
   font-style:{{ section.settings.font_style_text_desc_1 }};
   font-weight: {{ section.settings.font_weight_text_desc_1 }};
}
 </style>
<section>
    <div class="team-wrapper">
        <div class="container">
            <div class="sec-tl">
                        <span>{{ section.settings.heading1 }}</span>
                        <h2>{{ section.settings.heading2 }}</h2>
                    </div>
                    <div class="team-inner-wrapper">
                        <div class="row">
                            {% for block in section.blocks %}
                            <div class="col-lg-4">
                                <style>
                                    .team_link-{{block.id}} {
                                       color:{{ block.settings.color_text }} !important;
                                    }
                                    .content_desc-{{block.id}}{
                                      color:{{ block.settings.color_text }} !important;
                                    }
                                  
                                    </style >
                                <div class="team-box">
                                    <div class="team-image">
                                        <a href="#"> {% if block.settings.image1 != blank %}
                                            <img src="{{ block.settings.image1 | img_url: 'large' }}" alt="Your Alt Text">
                                             {% endif %}</a>
                                        <div class="social-icons">
                                            <ul>
                                    <li><a href="#"><i class="fa-brands fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa-brands fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa-brands fa-linkedin"></i></a></li>
                                    
                                </ul>
                                        </div>
                                    </div>
                                    <div class="team-content">
                                        <div class="team-info">
                                        <h3><a href="{{ block.settings.link1 }}"  class="team-link team_link-{{block.id}} team_link-{{section.id}}">{{ block.settings.textlink }}</a></h3>
                                        <p class="content-heading content_desc-{{block.id}} content_desc-{{section.id}}">{{ block.settings.desc-1 }}</p>
                                    </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
        </div>
    </div>
</section>

