<style>
    .banner-wrapper.home3 .banner-caption .caption-heading{
        font-size: {{ section.settings.font_size_text | append: 'px !important' }};
        font-weight: {{ section.settings.font_weight_text }};
        font-style :{{ section.settings.font_style_text }};
        color:{{ section.settings.color_text }};

    }


    .banner-wrapper.home3 .caption-content p  {
        font-size:{{ section.settings.font_size_text_paragraph | append: 'px !important'}};
        font-weight: {{ section.settings.font_weight_text_paragraph }};
        font-style :{{ section.settings.font_style_text_paragraph }};
        color:{{ section.settings.color_text8 }};
    }  

 .banner-wrapper .theme-btn
        {
        color:{{section.settings.btn_clr}} !important;
        background:{{section.settings.bg_clr}} !important;

    }

    .banner-wrapper .theme-btn:hover{
        color:{{section.settings.btn_clr_hover}} !important;
        background:{{section.settings.bg_clr_hover}} !important;
   
    }
        


</style>

<section>
    <div class="banner-wrapper home3">
        <div class="banner-item" style="background-image:url('{{ section.settings.image1 | img_url: 'master' }}');">
            <div class="banner-caption">
                <div class="container">
                    <div class="caption-inner">
                        <div class="caption-content">
                            <h2 class="caption-heading">{{ section.settings.heading1 }}</h2>
                            <p>{{ section.settings.richtext1 | raw }}</p>
                            <a href="{{ section.settings.link1 }}" class="theme-btn">
                                {{ section.settings.link1text }}
                            </a>
                        </div>
                        <div class="caption-item">
                            {% if section.settings.image2 != blank %}
                                {{ section.settings.image2 | img_url: 'master' | img_tag: '', 'lazy' | raw }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
