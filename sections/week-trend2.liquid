{%style%}

    .week_title-{{section.id}} {
         font-size:{{ section.settings.font_size_title}}px !important;
         font-weight:{{ section.settings.font_weight_title }} !important ;
         font-style:{{ section.settings.font_style_title }} !important ;
     }
           
 {%endstyle%}

<section>
    <div class="week-trend-wrapper">
        <div class="container">
            <div class="week-trend-inner-wrapper">
                <div class="row">
                    {% for block in section.blocks %}
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <style>
                            .week_title-{{block.id}}{
                               color:{{ block.settings.color_text }} !important;
                            }
                            
                            </style >
                        <div class="sec-tl home2">
                            <h3 class="week-heading week_title-{{block.id}} week_title-{{section.id}}">{{ block.settings.heading }}</h3>
                        </div>
                        <div class="week-trend-slider">
                            {% assign collection = section.settings.collection %}
                            {% for product in collections.all.products %}   
                            <div class="week-trend-box">
                                <div class="week-trend-image">
                                    {% assign images = product.media | where: 'media_type', 'image' %}

                                    {% for image in images limit: 2  %}
                                    {%- if forloop.first -%}
                                   {{- image | image_url: height:575, width:500, crop:'center' | image_tag: class:'primary-image'}}
                                   {% else %}
                                    {{- image | image_url: height:575, width:500, crop:'center' | image_tag: class:'secondary-image'}}
                                    {%- endif -%}
            
                                    {% endfor %}
                                    <div class="product-discount">-30%</div>
                                </div>
                                <div class="week-trend-content">
                                    <span class="product-price">$140.00 <del>$160.00</del></span>
                                </div>
                                <a href="#" class="product-link"></a>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<script>
$('.week-trend-slider').slick({
    infinite: true,
    speed: 800,
    autoplaySpeed: 4500,
    autoplay: true,
    slidesToShow: 3,
    slidesToScroll: 1,
    onhover: true,
    responsive: [{
        breakpoint: 1200,
        settings: {
            slidesToShow: 3,
            slidesToScroll: 1,
            infinite: true,
        }
    },
    {
        breakpoint: 992,
        settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            infinite: true,
        }
    },
    {
        breakpoint: 767,
        settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: false,
        }
    }
    ]
});

</script>


