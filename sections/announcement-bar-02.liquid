

{%- if section.settings.enable_announcement -%}
  
    {% render 'announcement-style-02' %} 

    <div class="topbar-wrapper">
        <div class="container--{{ section.settings.layout }}">
            <div class="topbar-inner-wrapper">
                <div class="topbar-item home2">
                    {%- for block in section.blocks -%}
                        {%- case block.type -%}
                            {%- when 'announcement' -%}
                                {%- if block.settings.text != blank -%}
                                    <p>
                                            {{ block.settings.text }}
                                    </p>
                                    <span>
                                        <a href="{{ block.setting.linkshop }}">{{ block.settings.shoptext }}</a>
                                    </span>
                                {%- endif -%}
                        {%- endcase -%}
                    {%- endfor -%}
                </div>
                <div class="topbar-item small-d-item">
                        <div class="currency-dropdown">
                            <select class="currency-selection" name="state">
                                <option value="USD">SUSD</option>
                                <option value="PKR">PKR</option>
                            </select>
                        </div>
                </div>
                <div class="topbar-item small-d-item">
                    <div class="review-menu">
                        <a href="#"><svg viewBox="0 0 24 24" width="25" height="25">
                                <path d="M21.984 9.234l-7.172-0.609-2.813-6.609-2.813 6.609-7.172 0.609 5.438 4.734-1.641 7.031 6.188-3.75 6.188 3.75-1.641-7.031zM12 15.422l-3.75 2.25 0.984-4.266-3.328-2.906 4.406-0.375 1.688-4.031 1.688 4.031 4.406 0.375-3.328 2.906 0.984 4.266z"></path>
                            </svg>
                            Reviews
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%- endif -%}

