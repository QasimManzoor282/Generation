<style>

.service-wrapper.style-three h4  {
      color: {{ section.settings.color_text }};
      font-size: {{ section.settings.font_size_text | append: 'px !important' }};
      font-style: {{ section.settings.font_style_text }};
      font-weight: {{ section.settings.font_weight_text }};

}
</style>
<section>
    <div class="service-wrapper style-three">
        <div class="container">
            <div class="service-inner-wrapper">
                <div class="row gx-0">
                    {%- for block in section.blocks -%}  
                        <div class="col-lg-4">
                            <div class="service-box">
                                <div class="service-icon">
                                    <img src="{{ block.settings.image1 | img_url: '' }}" alt="Service">
                                </div>
                                <h4>{{ block.settings.heading1 }}</h4>
                                <h4>{{ block.settings.heading2 }}</h4>
                            </div>
                        </div>
                    {%- endfor -%}
                    <div class="col-lg-4">
                        <div class="service-box">
                            <div class="service-icon">
                                <img src="{{ section.settings.image2 | img_url: '' }}" alt="Service">
                            </div>
                            <h4>{{ block.settings.heading3 }}</h4>
                            <h4>Payment Method</h4>
                            <div class="service-method">
                                <img src="{{ section.settings.image3 | img_url: '' }}" alt="Service">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "t:sections.service_3.name",
        "max_blocks": 2,
        "settings": [
            {
                "type": "color",
                "id": "color_text",
                "label": "t:settings_schema.colors.settings.colors_text.label__1",
                "default": "#b05d5d"
            },
            {
                "type": "range",
                "id": "font_size_text",
                "label": "t:sections.announcement-bar.blocks.announcement.settings.text.font_size",
                "min": 0,
                "max": 50,
                "step": 1,
                "unit": "t:sections.layout.mg_desktop.unit",
                "default": 12
            },
            {
                "type": "select",
                "id": "font_style_text",
                "label": "t:settings_schema.typography.settings.font_style.label",
                "default": "normal",
                "options": [
                {
                    "value": "normal",
                    "label": "t:settings_schema.typography.settings.font_style.options__1"
                },
                {
                    "value": "italic",
                    "label": "t:settings_schema.typography.settings.font_style.options__2"
                },
                {
                    "value": "oblique",
                    "label": "t:settings_schema.typography.settings.font_style.options__3"
                }]
            },
            {
                "type": "select",
                "id": "font_weight_text",
                "label": "t:settings_schema.typography.settings.font_weight.label",
                "default": "500",
                "options": [
                {
                    "value": "400",
                    "label": "t:settings_schema.typography.settings.font_weight.options__1"
                },
                {
                    "value": "500",
                    "label": "t:settings_schema.typography.settings.font_weight.options__2"
                },
                {
                    "value": "600",
                    "label": "t:settings_schema.typography.settings.font_weight.options__3"
                },
                {
                    "value": "700",
                    "label": "t:settings_schema.typography.settings.font_weight.options__4"
                },
                {
                 "value": "800",
                 "label": "t:settings_schema.typography.settings.font_weight.options__5"
                },
                {
                    "value": "900",
                    "label": "t:settings_schema.typography.settings.font_weight.options__6"
                }]
            },
            {
              "type": "image_picker",
              "id": "image2",
              "label": "t:sections.service_3.service_3_image.settings.content.label__5"
            },  
            { 
            "type": "header",
            "content": "t:sections.service_3.Heading-3"
            },
            {
                "type": "text",
                "id": "heading3",
                "label": "t:sections.service_3.service_3_image.settings.content.label__3",
                "default": "SHIPS WITHIN 4-7"
            },
             {
              "type": "image_picker",
              "id": "image3",
              "label": "t:sections.service_3.service_3_image.settings.content.label__6"
            }
           
        ],
        "blocks": [
            {
                "type": "service_3",
                "name": "service_3",
                "settings": [
                  

                {
              "type": "image_picker",
              "id": "image1",
              "label": "t:sections.service_3.service_3_image.settings.content.label__4"
            },
            { 
            "type": "header",
            "content": "t:sections.service_3.Heading-1"
            },
            {
                "type": "text",
                "id": "heading1",
                "label": "t:sections.service_3.service_3_image.settings.content.label__1",
                "default": "SHIPS WITHIN 4-7"
            },
           
            {
            "type": "header",
            "content": "t:sections.service_3.Heading-2"
            },
            {
                    "type": "text",
                    "id": "heading2",
                    "label": "t:sections.service_3.service_3_image.settings.content.label__2",   
                    "default": "BUSINESS DAYS"
            }
                ]
                
            }
        ],
      
        "presets": [
            {
                "name": "Service_3"
            }
        ]
    }
{% endschema %}
