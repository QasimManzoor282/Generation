<style>
.certified-title h2 {
   color: {{ section.settings.color_text }};
   font-size: {{ section.settings.font_size_text | append: 'px !important' }};
   font-style:{{ section.settings.font_style_text }};
   font-weight: {{ section.settings.font_weight_text }};
}
</style>
<section>
        <div class="certified-wrapper" style="background-image:url('{{ section.settings.image1 | img_url: '' }}');">
            <div class="container">
                <div class="certified-inner-wrapper">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="certified-title">
                                <h2>{{ section.settings.heading }}</h2>
                                <div class="certified-arrow">
                                    <div class="certified-prv-btn slick-arrow">
                                        <span>
                                            <svg xmlns="http://www.w3.org/2000/svg" id="Layer_2" height="20" viewBox="0 0 24 24" width="26" data-name="Layer 2">
                                                <path d="m22.707 11.293-7-7a1 1 0 0 0 -1.414 1.414l5.293 5.293h-17.586a1 1 0 0 0 0 2h17.586l-5.293 5.293a1 1 0 1 0 1.414 1.414l7-7a1 1 0 0 0 0-1.414z"></path>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="certified-nxt-btn slick-arrow">
                                        <span>
                                            <svg xmlns="http://www.w3.org/2000/svg" id="Layer_2" height="26" viewBox="0 0 24 24" width="20" data-name="Layer 2">
                                                <path d="m22.707 11.293-7-7a1 1 0 0 0 -1.414 1.414l5.293 5.293h-17.586a1 1 0 0 0 0 2h17.586l-5.293 5.293a1 1 0 1 0 1.414 1.414l7-7a1 1 0 0 0 0-1.414z"></path>
                                            </svg>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="certified-products">
                                <div class="certified-slider">
                                    {% assign collection = section.settings.collection %}
                                    {% for product in collection.products limit: 3 %}
                                    <div class="certified-box">
                                        {% assign images = product.media | where: 'media_type', 'image' %}

                                        {% for image in images limit: 2  %}
                                        {%- if forloop.first -%}
                                        {{- image | image_url: height:575, width:500, crop:'center' | image_tag: class:'primary-image'}}
                                        {% else %}
                                        {{- image | image_url: height:575, width:500, crop:'center' | image_tag: class:'secondary-image'}}
                                        {%- endif -%}
                                         {% endfor %}
                                        <div class="certified-content">
                                            <div class="certified-category">
                                                <span>{{ product.title }}</span>
                                            </div>
                                            <h4><a href="#">{{ product.description }}</a></h4>
                                            <div class="product-rating">
