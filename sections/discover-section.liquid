<style>
    .discover_title-{{section.id}} {
   font-size:{{ section.settings.font_size_title}}px !important;
   font-weight:{{ section.settings.font_weight_title }} !important ;
   font-style:{{ section.settings.font_style_title }} !important ;
}

.discover-text-{{section.id}}{
    font-size:{{ section.settings.font_size_text}}px !important;
            font-weight:{{ section.settings.font_weight_text }} !important ;
            font-style:{{ section.settings.font_style_text }} !important ;
}



 </style>

<section>
    <div class="discover-wrapper" style="background-image:url({{ section.settings.image1 | img_url: '' }});">
        <div class="discover-box">
            <div class="container">
                <div class="row justify-content-between gx-2">
                    {% for block in section.blocks %}
                    <div class="col-lg-4 col-md-6 col-sm-8">
                        <style>
                            .discover_title-{{block.id}} {
                               color:{{ block.settings.color_text }} !important;
                            }
                            .discover-text-{{block.id}}{
                              color:{{ block.settings.color_text }} !important;
                            }
                            .discover_btn-{{block.id}}{
                              color:{{block.settings.btn_clr}} !important;
                              background:{{block.settings.bg_clr}} !important;
                            }
                            .discover_btn-{{block.id}}:hover{
                              color:{{block.settings.btn_clr_hover}} !important;
                              background:{{block.settings.bg_clr_hover}} !important;
                            }
                            </style >
                        <div class="discover-content">
                            <div class="discover-title ">
                                <h3 class="discover-heading discover_title-{{block.id}} discover_title-{{section.id}}">{{ block.settings.heading1 }}</h3>
                            </div>
                            <p  class="discover-text-{{block.id}} discover-text-{{section.id}}">{{ block.settings.heading2 }}</p>
                            <a href="#" class="discover-button button-line discover_btn-{{block.id}}">{{ block.settings.linktext1 }}</a>
                        </div>
                        
                    </div>
                    {% endfor  %}
                </div>
            </div>
        </div>
    </div>
</section>   

